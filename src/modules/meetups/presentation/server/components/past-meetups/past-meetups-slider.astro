---
import { MeetupsLocator } from '@/meetups/di/meetups.locator'
import EventsSlider from '@/ui/components/events-slider/events-slider.astro'
import { Urls } from '@/ui/urls/urls'

interface Props {
  location?: string
}

const { location } = Astro.props
const { data: pastMeetups } = await MeetupsLocator.getPastMeetupsQuery().execute({ count: 10, location })
---

<EventsSlider
  title={'Meetups pasados' + (location ? ` en ${location}` : '')}
  seeMoreLink={Urls.MEETUPS}
  goToEvent={Urls.MEETUP}
  events={pastMeetups}
/>
