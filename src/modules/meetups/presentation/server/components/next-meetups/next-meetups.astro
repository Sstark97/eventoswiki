---
import GradientTitle from '@/ui/components/gradient-title/gradient-title.astro'
import Link from '@/ui/components/link/link.astro'
import { Urls } from '@/ui/urls/urls'
import { MeetupsLocator } from '../../../../di/meetups.locator'
import MeetupsGrid from '../meetups-grid/meetups-grid.astro'

interface Props {
  location?: string
}

const { location } = Astro.props
const { data: nextMeetups } = await MeetupsLocator.getNextMeetupsQuery().execute({ count: 3, location })
---

<section>
  <div class="flex items-center justify-between my-4">
    <GradientTitle>Pr√≥ximos meetups{location && ` en ${location}`}</GradientTitle>
    <slot name="actions">
      <Link href={Urls.MEETUPS} classes="text-right shrink-0">Ver todos</Link>
    </slot>
  </div>
  <MeetupsGrid meetups={nextMeetups} />
</section>
