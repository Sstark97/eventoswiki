---
import { MapPin } from '@/ui/icons'

interface Props {
  location?: string | null
}

const { location } = Astro.props
---

{
  location && (
    <div class="location">
      <MapPin />
      <p class="location-text">{location}</p>
    </div>
  )
}

<style>
  .location {
    @apply flex shrink-0 items-center gap-px;
  }
  .location-text {
    @apply text-sm;
  }
</style>
