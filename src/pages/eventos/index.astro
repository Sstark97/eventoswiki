---
import { NewUrls } from '@/core/ui/urls/urls'
import { EventsLocator } from '@/events/di/events.locator'
import EventsGrid from '@/events/presentation/server/components/events-grid/events-grid.astro'
import Layout from '@/layouts/layout.astro'
import GradientTitle from '@/ui/components/gradient-title/gradient-title.astro'
import Link from '@/ui/components/link/link.astro'

const { data: events } = await EventsLocator.getNextEventsQuery().execute({ count: 10, page: 1 })
---

<Layout title="eventos.wiki - Eventos">
  <div class="flex items-center justify-between">
    <GradientTitle>Eventos</GradientTitle>
    <Link href={NewUrls.PAST_EVENTS} classes="text-right  shrink-0">Ver pasados</Link>
  </div>
  <EventsGrid events={events} />
</Layout>
